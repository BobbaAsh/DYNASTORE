<div class="container">
  <h1 class="text-center">My artist</h1>
  <div class="row">
    <% @artists.each do |artist| %>

    <div class="col-xs-12 col-sm-4">
        <div class="card-description">
          <h2><%= artist.name %></h2>
           <p><%= artist.genre %></p>
          <p><%= artist.description %></p>
          <p><%= artist.price %></p>
        </div>

        <%= link_to "Details", artist_path(artist), class: "card-link" %>
      </div>
    </div>
    <%= link_to "new", new_artist_path(artist) %>
    <% end %>
  </div>
</div>
