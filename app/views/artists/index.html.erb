<div>
  <div class="container">
    <h1 class="artist-text-center">Artists</h1>
    <form class="form-inline">
      <%= form_tag artists_path, method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find an Artist by name or genre"
        %>
      <% end %>
    </form>
    <div class="col-lg-12 cards">
    <% @artists.each do |artist| %>
      <div class="card" style="width: 18rem;">
       <%= cl_image_tag artist.photo %>
        <div class="card-body">
          <h2 class="card-text"> <%= artist.name %></h2>
          <p class="card-text"> <%= artist.genre %></p>
          <h3 class="card-text"> <%= artist.price %> â‚¬</h3>
          <%= link_to "Details", artist_path(artist), class: "btn btn-info" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="text-center">
    <% if policy(Artist).create? %>
      <%= link_to "Add an artist", new_artist_path, class: "btn btn-info" %>
    <% end %>
  </div>
</div>
