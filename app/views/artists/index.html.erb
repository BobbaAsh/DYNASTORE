              <div class="card-body">
                <h2 class="card-text"> <%= artist.name %></h2>
                <p class="card-text"> <%= artist.genre %></p>
                <h3 class="card-text"> <%= artist.price %> â‚¬</h3>
                <%= link_to "Details", artist_path(artist), class: "btn btn-info" %>
              </div>
            </div>
          <% end %>
      </div>
  </div>
</div>

