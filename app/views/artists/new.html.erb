<div class="container padded">
  <h1 class="text-center">Add a new artist</h1>
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
        <%= simple_form_for @artist do |f| %>
          <div class="label">Name</div>
          <div class="typo"> <%= f.input :name, label: false %> </div>
          <div class="label">Description</div>
          <div class="typo"> <%= f.input :description, label: false %> </div>
          <div class="label">Genre</div>
          <div class="typo"> <%= f.input :genre, label: false %> </div>
          <div class="label">Price</div>
          <div class="typo"> <%= f.input :price, label: false %> </div>
          <%= f.submit "Submit", class: "btn btn-info" %>
        <% end %>
        <div class="pad20">
        </div>
    </div>
  </div>
</div>
