<div class="container padded">
  <h1 class="text-center">Add new artist</h1>
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
        <%= simple_form_for @artist do |f| %>
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :genre %>
          <%= f.input :price %>
          <%= f.submit "Submit",  class: "btn btn-primary" %>
        <% end %>
        <div class="pad20">
        </div>
    </div>
  </div>
</div>
