<div class="container">
  <h1 class="artist-text-center">Mes Artistes</h1>
<div class= "d-flex justify-content-around">
  <% @artists.each do |artist|%>
    <div class="card" style="width: 18rem;">
        <%= cl_image_tag artist.photo, :aspect_ratio=>"1:1", :crop=>"fill" %>
        <div class="card-body">
          <h2 class="card-text"> <%= artist.name %></h2>
          <p class="card-text"> <%= artist.genre %></p>
          <h3 class="card-text"> <%= artist.price %> €</h3>
          <%= link_to "Détails", artist, class: "btn btn-info" %>
        </div>
     </div>
  <% end %>
 </div>
</div>

<div class="text-center">
<%= link_to "Retour", root_path, class: "btn btn-info" %>
</div>
