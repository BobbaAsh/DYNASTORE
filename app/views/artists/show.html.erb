<div class="container pad20" style="width:60%; margin-top: 30px; margin-bottom: 30px;" >
  <div class="row">
    <div class="col-lg-12 ">
      <h1 class="artist-text-center"><%= @artist.name %> </h1>
      <p class="text-center"> <%= cl_image_tag @artist.photo, height: 300, width: 300, crop: :fill , class: "rounded" %>
      </p>
      <p class="text-center"> <%= "Genre musical: #{@artist.genre}" %> </p>
      <p class="text-center"> <%= "Description: #{@artist.description}" %> </p>
    </div>
    <div class="text-center col-lg-12">
      <% if policy(@artist).edit? %>
      <%= link_to "Modifier", edit_artist_path, class: "btn btn-info" %>
      <% end %>
      <% if policy(@artist).destroy? %>
      <%= link_to "Supprimer".html_safe, artist_path(@artist), class: "btn btn-info",
      method: :delete,
      data: { confirm: "Es-tu sûr?" } %>
      <% end %>
    </div>
    <div class="col-lg-12">
        <div style=" border: 1px solid black ; padding:10px ; width:100%; height:100%; border-radius: 3px; padding-right: 20px; padding-left: 20px; font-size: 10px;">
          <h5 class="text-center" style="font-weight: bold; letter-spacing: 1px;">Reservation</h5>
            <%= simple_form_for [@artist, @reservation] do |f| %>
            <%= f.input :begin_date, placeholder: "mojito" %>
            <%= f.input :end_date, placeholder: "mojito" %>
            <p class="text-center" style="font-size: 15px; font-weight: bold;"> <%= "Prix: #{@artist.price}€" %> </p>
            <%= f.button :submit, class: "btn btn-info btn-lg btn-block", value: "Réservez" %>
            <% end %>
        </div>
    </div>
  </div>
</div>

<div class="text-center">
  <%= link_to "Retour", artists_path, class: "btn btn-info" %>
</div>
