<div class="container">
  <h1 class="artist-text-center">Réservations de mes artistes</h1>
  <% @reservations.each do |reservation|%>
    <div class="card-product">
      <div class="card-product-infos">
        <h2><%= reservation.artist.name %></h2>
        <p><em>Du</em> <%= reservation.begin_date %> <em>au</em> <%= reservation.end_date %> </p>
        <p>Prix: <%= reservation.artist.price %>€ </p>
        <p>Par <%= reservation.user.email %></p>
        <p class="text-center"> <%= link_to "Cancel", reservation_path(reservation), method: :delete, class: "btn btn-info" %> </p>
      </div>
    </div>
  <% end %>
</div>

<div class="text-center">
<%= link_to "Retour", root_path, class: "btn btn-info" %>
</div>


